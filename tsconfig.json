{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "app/*" : [
                "./src/app/*"
            ],
            "*" : [
                "./node_modules/*"
            ]
        },
        "sourceMap": true,
        "declaration": true,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib" : ["es5", "es2015.iterable", "dom", "scripthost"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noResolve": false,
        "removeComments": false,
        "listFiles": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    }
}